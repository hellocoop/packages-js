{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": ["src"],
    "exclude": [
        "node_modules",
        "./**/dist",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.spec.*"
    ],
    "compilerOptions": {
        "resolveJsonModule": true,
        "declarationMap": true,
        "declaration": true,
        "rootDir": "./src",
        "target": "ES2022",
        "strict": true,
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["ES2022", "DOM"]
    }
}
