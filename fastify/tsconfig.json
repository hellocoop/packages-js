{
    "extends": "@tsconfig/node18/tsconfig.json",
    "exclude": ["node_modules", "**/dist"],
    "include": ["src/*.ts"],
    "compilerOptions": {
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "declarationMap": true,
        "declaration": true,
        "rootDir": "./src",
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "ES2022",
        "strict": true,
        "outDir": "./dist"
    }
}
